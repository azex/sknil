 @require "core/index"

body
  background: #c8c8c8
  font-family: fonts
  padding-left: 1em
  padding-right: 1em

/* page title */
#titles
  border-top-left-radius: 5px
  border-top-right-radius: 5px
  background: -moz-linear-gradient(45deg, c18 0%, c18 3%, c19 49%, c20 69%, c21 90%, c22 100%)
  background: -webkit-gradient(linear, left bottom, right top, color-stop(0%, c18), color-stop(3%, c18), color-stop(49%, c19), color-stop(69%, c20), color-stop(90%, c21), color-stop(100%, c22))
  background: -webkit-linear-gradient(45deg, c18 0%, c18 3%, c19 49%, c20 69%, c21 90%, c22 100%)
  background: -o-linear-gradient(45deg, c18 0%, c18 3%, c19 49%, c20 69%, c21 90%, c22 100%)
  background: -ms-linear-gradient(45deg, c18 0%, c18 3%, c19 49%, c20 69%, c21 90%, c22 100%)
  background: linear-gradient(45deg, c18 0%, c18 3%, c19 49%, c20 69%, c21 90%, c22 100%)

#titles p
  font-family: title_font
  font-size: 16pt
  text-align: center
  border-radius: 0 0 8px 8px

#lang_links_container

#header .links,
#footer
  color: #ddd
  border-radius: 0 0 8px 8px
  background: -moz-linear-gradient(left, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: -webkit-gradient(linear, left top, right top, color-stop(0%, c22), color-stop(10%, c21), color-stop(31%, c20), color-stop(51%, c19), color-stop(97%, c18), color-stop(100%, c18))
  background: -webkit-linear-gradient(left, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: -o-linear-gradient(left, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: -ms-linear-gradient(left, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: linear-gradient(to right, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)

#header
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px
  border: none

#header a,
#footer a
  color: white
  text-decoration: none

#header a:hover,
#footer a:hover
  text-decoration: underline

/* body */
#bugzilla-body
  color: black
  border: 1px solid #747e93
  padding: 10px
  font-size: 10pt
  border-radius: 5px 0px 5px 0px
  background: -moz-linear-gradient(top, c23 0%, c24 6%, c25 22%, c26 31%, c27 52%, c28 91%, c29 98%, c29 100%)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, c23), color-stop(6%, c24), color-stop(22%, c25), color-stop(31%, c26), color-stop(52%, c27), color-stop(91%, c28), color-stop(98%, c29), color-stop(100%, c29))
  background: -webkit-linear-gradient(top, c23 0%, c24 6%, c25 22%, c26 31%, c27 52%, c28 91%, c29 98%, c29 100%)
  background: -o-linear-gradient(top, c23 0%, c24 6%, c25 22%, c26 31%, c27 52%, c28 91%, c29 98%, c29 100%)
  background: -ms-linear-gradient(top, c23 0%, c24 6%, c25 22%, c26 31%, c27 52%, c28 91%, c29 98%, c29 100%)
  background: linear-gradient(to bottom, c23 0%, c24 6%, c25 22%, c26 31%, c27 52%, c28 91%, c29 98%, c29 100%)

a
  color: #6070cf

a:hover
  color: #8090ef

hr
  border-color: #964496
  border-style: outset
  border-width: 1px
  margin-top: 10px

/* edit */
#bugzilla-body th
  font-weight: bold
  vertical-align: top
  white-space: nowrap

#bug-form td
  padding-top: 2px

/* attachments */
#attachment-list
  border: 2px solid #c8c8ba
  font-size: 9pt

#attachment-list th
  background-color: #e6e6d8
  border: none
  border-bottom: 1px solid #c8c8ba
  text-align: left

#attachment-list th a
  color: #646456

#attachment-list td
  border: none

#attachment-list-actions td
  border-top: 1px solid #c8c8ba

/* Comments */
#comments th
  font-size: 9pt
  font-weight: bold
  padding-top: 5px
  padding-right: 5px
  padding-bottom: 10px
  text-align: right
  vertical-align: top
  white-space: nowrap

#comments td
  padding-top: 2px
  font-family: fonts

.reply-button a
  padding-left: 2px
  padding-right: 2px

.bz_comment
  background: -moz-linear-gradient(top, c42 0%, c43 30%, c44 68%, c45 100%)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, c42), color-stop(30%, c43), color-stop(68%, c44), color-stop(100%, c45))
  background: -webkit-linear-gradient(top, c42 0%, c43 30%, c44 68%, c45 100%)
  background: -o-linear-gradient(top, c42 0%, c43 30%, c44 68%, c45 100%)
  background: -ms-linear-gradient(top, c42 0%, c43 30%, c44 68%, c45 100%)
  background: linear-gradient(to bottom, c42 0%, c43 30%, c44 68%, c45 100%)
  margin: 1px 1px 10px 1px
  border-width: 1px
  border-style: solid
  border-color: #c8c8ba
  border-radius: 0 0 10px 10px
  padding: 5px
  font-family: fonts
  font-size: 9pt
  width: 800pt

.bz_comment_head,
.bz_first_comment_head
  margin: 0
  padding: 0
  font-weight: bold
  background: -moz-linear-gradient(left, c46 0%, c47 50%, c46 100%)
  background: -webkit-gradient(linear, left top, right top, color-stop(0%, c46), color-stop(50%, c47), color-stop(100%, c46))
  background: -webkit-linear-gradient(left, c46 0%, c47 50%, c46 100%)
  background: -o-linear-gradient(left, c46 0%, c47 50%, c46 100%)
  background: -ms-linear-gradient(left, c46 0%, c47 50%, c46 100%)
  background: linear-gradient(to right, c46 0%, c47 50%, c46 100%)

.bz_comment_user
  margin-left: 0
  font-family: fonts

.bz_comment.bz_private
  background-color: #f0e8e8
  border-color: #f8c8ba
  font-family: fonts

.bz_closed,
.bz_CLOSED td
  background-color: lightgoldenrodyellow 
  text-decoration: none

.comment_rule
  display: none

/* footer */
#footer
  border: 1px solid #747e93
  width: 100%
  border-radius: 5px 0px 5px 0px
  background: -moz-linear-gradient(-45deg, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: -webkit-gradient(linear, left top, right bottom, color-stop(0%, c22), color-stop(10%, c21), color-stop(31%, c20), color-stop(51%, c19), color-stop(97%, c18), color-stop(100%, c18))
  background: -webkit-linear-gradient(-45deg, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: -o-linear-gradient(-45deg, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: -ms-linear-gradient(-45deg, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)
  background: linear-gradient(135deg, c22 0%, c21 10%, c20 31%, c19 51%, c18 97%, c18 100%)

#footer #links-actions,
#footer #links-edit,
#footer #links-saved,
#footer #links-special
  margin-top: 2ex

#footer .links
  border-spacing: 30px
  margin-bottom: 2ex

.separator
  color: #cccccc

.NEW
  color: yellow
  background-color: darkred
  padding: 1px 5px
  font-family: monospace
  font-size: 8pt

.ASSIGNED
  color: forestgreen
  background-color: lightgray
  padding: 1px 5px
  font-family: monospace
  font-size: 8pt

.RESOLVED
.FIXED
  color: black
  background-color: lightgreen
  padding: 1px 5px
  font-family: monospace
  font-size: 8pt

.VERIFIED
  color: navy
  background-color: lime
  padding: 1px 5px
  font-family: monospace
  font-size: 8pt

.CLOSED
  color: black
  background-color: lightgray
  padding: 1px 5px
  font-family: monospace
  font-size: 8pt

.INVALID
  color: crimson
  background-color: lightgray
  padding: 1px 5px
  font-family: monospace
  font-size: 8pt

.P1
  background-color: violet
  color: black
  padding: 1px 5px

.P2
  background-color: orange
  color: black
  padding: 1px 5px

.P3
  background-color: yellow
  color: black
  padding: 1px 5px

.P4
  background-color: greenyellow
  color: black
  padding: 1px 5px

.P5
  background-color: lime
  color: black
  padding: 1px 5px

/* tabs */
.tabbed .tabbody
  padding: 1em
  border-style: solid
  border-color: transparent
  border-width: 0

.tabs
  margin: 0
  padding: 0
  border-collapse: collapse

.tabs a
  color: #FEFEFC

.tabs td
  border-width: 0px
  background: -moz-linear-gradient(left, c48 0%, c49 3%, c50 32%, c50 70%, c49 98%, c48 100%)
  background: -webkit-gradient(linear, left top, right top, color-stop(0%, c48), color-stop(3%, c49), color-stop(32%, c50), color-stop(70%, c50), color-stop(98%, c49), color-stop(100%, c48))
  background: -webkit-linear-gradient(left, c48 0%, c49 3%, c50 32%, c50 70%, c49 98%, c48 100%)
  background: -o-linear-gradient(left, c48 0%, c49 3%, c50 32%, c50 70%, c49 98%, c48 100%)
  background: -ms-linear-gradient(left, c48 0%, c49 3%, c50 32%, c50 70%, c49 98%, c48 100%)
  background: linear-gradient(to right, c48 0%, c49 3%, c50 32%, c50 70%, c49 98%, c48 100%)

.tabs td.selected
  border-width: 0px
  background: -moz-linear-gradient(left, c48 0%, c51 35%, c52 53%, c53 76%, c48 100%)
  background: -webkit-gradient(linear, left top, right top, color-stop(0%, c48), color-stop(35%, c51), color-stop(53%, c52), color-stop(76%, c53), color-stop(100%, c48))
  background: -webkit-linear-gradient(left, c48 0%, c51 35%, c52 53%, c53 76%, c48 100%)
  background: -o-linear-gradient(left, c48 0%, c51 35%, c52 53%, c53 76%, c48 100%)
  background: -ms-linear-gradient(left, c48 0%, c51 35%, c52 53%, c53 76%, c48 100%)
  background: linear-gradient(to right, c48 0%, c51 35%, c52 53%, c53 76%, c48 100%)

.tabs td.spacer
  background: transparent
  border-top: none
  border-left: none
  border-right: none

/* other */
.navigation
  background: -moz-linear-gradient(left, c54 0%, c55 30%, c56 43%, c57 68%, c58 100%)
  background: -webkit-gradient(linear, left top, right top, color-stop(0%, c54), color-stop(30%, c55), color-stop(43%, c56), color-stop(68%, c57), color-stop(100%, c58))
  background: -webkit-linear-gradient(left, c54 0%, c55 30%, c56 43%, c57 68%, c58 100%)
  background: -o-linear-gradient(left, c54 0%, c55 30%, c56 43%, c57 68%, c58 100%)
  background: -ms-linear-gradient(left, c54 0%, c55 30%, c56 43%, c57 68%, c58 100%)
  background: linear-gradient(to right, c54 0%, c55 30%, c56 43%, c57 68%, c58 100%)

/* Rules specific for printing */
@media print
  #header,
  #footer,
  .navigation
    display: none

  body
    background-image: none
    background-color: white

  #bugzilla-body
    border: none
    margin: 0
    padding: 0
